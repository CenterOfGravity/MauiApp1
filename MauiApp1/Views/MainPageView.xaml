<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="A"  />

                <Label x:Name="lblSign"  Text="+" VerticalOptions="Center" />
                
                <Entry x:Name="B" />

                <Label Text="=" VerticalOptions="Center"  />
                <Label x:Name="lblResult" VerticalOptions="Center"/>
            </StackLayout>


            <Button x:Name="AddBtn" Text="Sumar"  Clicked="AddBtn_Clicked" />
            <Button x:Name="SubtractBtn" Text="Restar" Clicked="SubtractBtn_Clicked"/>
            <Label x:Name="Timer"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
